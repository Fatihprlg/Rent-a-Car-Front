
@{
    ViewBag.Title = "Giriş Yap";
}
<div class="login-bg">
    
</div>
<div class="login-sec">
    <form action="/Admin/Login" class="request-form bg-primary">
        <h2>Giriş Yap</h2>
        <div class="form-group">
            <label>E-Mail</label>
            <input type="text" class="form-control" name="email" required>
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" class="form-control" name="pwd" required>
        </div>
        <div class="form-double-item">
            <input type="radio" id="admin" name="admin-radio" value="admin">
            <label for="admin">Yönetici</label>
            <input type="radio" id="employee" name="admin-radio" value="employee">
            <label for="employee">Personel</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Giriş Yap" class="btn btn-success submit">
        </div>
    </form>

</div>
