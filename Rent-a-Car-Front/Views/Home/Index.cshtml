@{
    ViewBag.Title = "Home Page";
}
<div class="main-bg ">
</div>

<div class="jumbotron">
    <div class="fast-rent-section col-md-4 col-xs-10">
        <form action="#" class="request-form bg-primary">
            <h2>Make your trip</h2>
            <div class="form-group">
                <label for="" class="label">Pick-up location</label>
                <input type="text" class="form-control" placeholder="City, Airport, Station, etc">
            </div>
            <div class="form-group">
                <label for="" class="label">Drop-off location</label>
                <input type="text" class="form-control" placeholder="City, Airport, Station, etc">
            </div>
            <div class="form-double-item">
                <div class="form-group col-lg-6">
                    <label for="" class="label">Pick-up date</label>
                    <input type="date" class="form-control mr-2" id="book_pick_date" placeholder="Date">
                </div>
                <div class="form-group col-lg-6">
                    <label for="" class="label">Drop-off date</label>
                    <input type="date" class="form-control ml-2" id="book_off_date" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="label">Pick-up time</label>
                <input type="text" class="form-control" id="time_pick" placeholder="Time">
            </div>
            <div class="form-group">
                <input type="submit" value="Rent A Car Now" class="btn btn-success submit">
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <div class="services-wrap">
            <h3 >Better Way to Rent Your Perfect Cars</h3>
            <div>
                <div class="col-md-4">
                    <div>
                        <div class="align-items-center justify-content-center"><span class="glyphicon glyphicon-map-marker icon"></span></div>
                        <div class="text">
                            <h3>Choose Your Pickup Location</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div >
                        <div><span class="glyphicon glyphicon-piggy-bank icon"></span></div>
                        <div>
                            <h3>Select the Best Deal</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div>
                        <div><span class="glyphicon glyphicon-road icon"></span></div>
                        <div>
                            <h3>Reserve Your Rental Car</h3>
                        </div>
                    </div>
                </div>
            </div>
            <p><a href="#" class="btn btn-primary">Reserve Your Perfect Car</a></p>
        </div>
    </div>
</div>
