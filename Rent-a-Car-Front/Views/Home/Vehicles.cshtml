@{
    ViewBag.Title = "Araçlar";
}
<div class="container filter-container">
    <div>
        <button type="button" class="collapse-btn" data-toggle="collapse" data-target="#filter-collapse">
            <i class="fas fa-minus-square"></i>
        </button>
    </div>

    <div class=" navbar-collapse collapse" id="filter-collapse">
        <form action="#" class="request-form car-filter bg-primary">
            <div class="form-group">
                <label for="" class="label">Alma Noktası</label>
                <input type="text" class="form-control" placeholder="Şehir, Adres vb.">
            </div>
            <div class="form-group">
                <label for="" class="label">Teslim Noktası</label>
                <input type="text" class="form-control" placeholder="Şehir, Adres vb.">
            </div>
            <div class="form-double-item">
                <div class="form-group col-lg-6">
                    <label for="" class="label">Kiralama Tarihi</label>
                    <input type="date" class="form-control mr-2" id="book_pick_date" placeholder="">
                </div>
                <div class="form-group col-lg-6">
                    <label for="" class="label">Teslim Tarihi</label>
                    <input type="date" class="form-control ml-2" id="book_off_date" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="label">Kiralama Saati</label>
                <input type="time" class="form-control" id="time_pick" placeholder="Saat">
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Filtrele" class="btn btn-success submit">
            </div>
        </form>
    </div>
</div>

