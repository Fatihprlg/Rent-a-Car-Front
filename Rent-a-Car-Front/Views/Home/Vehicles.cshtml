
@{
    ViewBag.Title = "Vehicles";
}
<div class="container filter-container">
    <div>
        <button type="button" class="collapse-btn" data-toggle="collapse" data-target=".filter-collapse">
            <i class="fas fa-minus-square"></i>
        </button>

    </div>

    <div class="filter-collapse collapse">
        <form action="#" class="request-form car-filter bg-primary">
            <div class="form-group">
                <label for="" class="label">Pick-up location</label>
                <input type="text" class="form-control" placeholder="City, Airport, Station, etc">
            </div>
            <div class="form-group">
                <label for="" class="label">Drop-off location</label>
                <input type="text" class="form-control" placeholder="City, Airport, Station, etc">
            </div>
            <div class="form-double-item">
                <div class="form-group col-lg-6">
                    <label for="" class="label">Pick-up date</label>
                    <input type="date" class="form-control mr-2" id="book_pick_date" placeholder="">
                </div>
                <div class="form-group col-lg-6">
                    <label for="" class="label">Drop-off date</label>
                    <input type="date" class="form-control ml-2" id="book_off_date" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="label">Pick-up time</label>
                <input type="text" class="form-control" id="time_pick" placeholder="Time">
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Filter Now" class="btn btn-success submit">
            </div>
        </form>
    </div>

</div>

